<Window x:Class="WpfOblig3.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOblig3"
        mc:Ignorable="d"
        Title="CourseWindow" Height="635" Width="859">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="677*"/>
            <ColumnDefinition Width="130*"/>
        </Grid.ColumnDefinitions>
        <ListView Name="courseList" ItemsSource="{Binding}" Margin="10,69,242,0" MouseDoubleClick="courseList_MouseDoubleClick" Grid.ColumnSpan="3">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="90" Header="Course code" DisplayMemberBinding="{Binding Path=Coursecode}" />
                        <GridViewColumn Width="130" Header="Course name" DisplayMemberBinding="{Binding Path=Coursename}" />
                        <GridViewColumn Width="80" Header="Semester" DisplayMemberBinding="{Binding Path=Semester}" />
                        <GridViewColumn Width="170" Header="Teacher" DisplayMemberBinding="{Binding Path=Teacher}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="studentCourseList" ItemsSource="{Binding}" Margin="435,69,10,0" Grid.ColumnSpan="2" Grid.Column="2" >
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="150" Header="Student" DisplayMemberBinding="{Binding Path=Student.Studentname}" />
                        <GridViewColumn Width="80" Header="ID" DisplayMemberBinding="{Binding Path=Student.Id}" />
                        <GridViewColumn Width="60" Header="Age" DisplayMemberBinding="{Binding Path=Student.Studentage}" />
                        <GridViewColumn Width="60" Header="Grade" DisplayMemberBinding="{Binding Path=Grade}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
